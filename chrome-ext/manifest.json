{
  "manifest_version": 3,
  "name": "HA yt-dlp Downloader",
  "version": "1.0.0",
  "description": "1-click YouTube â†’ HA yt-dlp Docker API",
  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
